# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{zig,zon,rs,py,wgsl}]
indent_style = space
indent_size = 4

[{*.cmake,CMakeLists.txt,CMakeListsSources.txt}]
indent_size = 2

[*.asm]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab

[*.go]
indent_size = 4
indent_style = tab

[*.gd]
indent_style = tab

# https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/style-rules/csharp-formatting-options
[*.cs]
csharp_new_line_before_open_brace = none
