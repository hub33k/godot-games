{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Godot
    {
      // https://github.com/godotengine/godot-vscode-plugin?tab=readme-ov-file#configurations
      "name": "Run game (debug)",
      "type": "godot",
      "request": "launch",
      "project": "${workspaceFolder}/game",
      "address": "127.0.0.1",
      "port": 6007,
      // "scene": "main|current|pinned|<path>",
      "scene": "main",
      // "editor_path": "<path>",
      // engine command line flags
      "profiling": false,
      "single_threaded_scene": false,
      "debug_collisions": false,
      "debug_paths": false,
      "debug_navigation": false,
      "debug_avoidance": false,
      "debug_stringnames": false,
      // "frame_delay": 0,
      // "time_scale": 1.0,
      // "disable_vsync": false,
      // "fixed_fps": 60,
      // anything else
      "additional_options": ""
    },

    // Go
    {
      "name": "Run server (debug)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/server/cmd/main.go",
      "output": "${workspaceFolder}/server/cmd/debug.exe",
      "cwd": "${workspaceFolder}/server",
      "args": ["--config", "${workspaceFolder}/server/.env"]
    }
  ]
}
